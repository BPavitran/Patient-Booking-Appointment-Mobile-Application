<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/androidlogin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ViewSpecification"
    tools:showIn="@layout/app_bar_view_specification">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="177dp"
        android:layout_height="25dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="41dp"
        android:layout_marginBottom="21dp"
        android:text="Medical Specification"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/txtSpecification"
