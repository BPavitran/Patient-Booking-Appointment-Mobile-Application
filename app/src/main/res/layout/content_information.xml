<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/androidlogin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".information"
    tools:showIn="@layout/app_bar_information">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="14dp"
        android:text="Name"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginStart="179dp"
        android:layout_marginTop="0dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="45dp"
        android:text="Surname"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/txtSurname"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignEnd="@+id/txtName"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="75dp"
        android:text="Full Name"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/txtFullName"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignParentStart="true"
        android:layout_marginStart="179dp"
        android:layout_marginTop="0dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="38dp"
        android:text="Age"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/txtAge"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtFullName"
        android:layout_alignBottom="@+id/textView12"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_marginTop="138dp"
        android:layout_marginEnd="17dp"
        android:text="Gender"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/txtGender"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtFullName"
        android:layout_alignTop="@+id/textView14"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_marginTop="171dp"
        android:layout_marginEnd="26dp"
        android:text="Blood"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/txtBlood"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtFullName"
        android:layout_alignTop="@+id/textView16"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="204dp"
        android:text="NIC Number"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/txtNIC"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="179dp"
        android:layout_marginTop="205dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView10"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="300dp"
        android:text="Address"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/txtAddress"
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtNIC"
        android:layout_alignTop="@+id/textView20"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView10"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="230dp"
        android:text="Email"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtNIC"
        android:layout_alignTop="@+id/textView22"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="125dp"
        android:layout_height="19dp"
        android:layout_alignEnd="@+id/textView10"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-63dp"
        android:layout_marginBottom="200dp"
        android:text="Phone number"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/txtPhone"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtNIC"
        android:layout_alignTop="@+id/textView24"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView10"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-31dp"
        android:layout_marginBottom="163dp"
        android:text="User Name"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/txtUsername"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtNIC"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="160dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView6"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="265dp"
        android:text="City"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/txtCity"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtName"
        android:layout_alignTop="@+id/textView"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btnMakeUpdate"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="47dp"
        android:layout_toEndOf="@+id/textView24"
        android:background="@drawable/button_round"
        android:onClick="onMakeUpdate"
        android:text="Make Update"
        android:textAllCaps="false" />
</RelativeLayout>