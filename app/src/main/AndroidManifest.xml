<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pavi.patientapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Patient Application"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Patient"
            android:label="Welcome"
            android:theme="@style/AppTheme" />
        <activity android:name=".Register" />
        <activity
            android:name=".ViewSpecification"
            android:label="Medical Specification"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".MakeAppointment"
            android:label="Make Appointment"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".information"
            android:label="Self Information"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".InformationUpdate"
            android:label="Self Information Update"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>